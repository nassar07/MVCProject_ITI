@model IEnumerable<Category> 
 @{ 
     ViewData["Title"] = "All Categories"; 
 } 

 <h2>All Categories</h2> 

 <table class="table table-striped table-bordered"> 
     <thead class="table-dark"> 
         <tr> 
             <th>Category Name</th> 
             <th>Actions</th> 
         </tr> 
     </thead> 
     <tbody> 
         @foreach (var category in Model) 
         { 
             <tr> 
                 <td>@category.Name</td> 
                 <td> 
                    <a asp-action="EditCategoryForm" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                    <form asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@category.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button> 
                     </form> 
                 </td> 
             </tr> 
         } 
     </tbody> 
 </table> 

<a asp-action="CreateCategoryForm" asp-controller="Category" class="btn btn-primary">Create New Category</a>
